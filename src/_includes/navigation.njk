<!-- _includes/navigation.njk -->
<header class="border-b border-gray-200" x-data="{ open: false }">
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo and Site Name -->
    <div class="flex items-center space-x-3">
      <a href="/" class="flex items-center space-x-3 hover:opacity-90 transition-opacity">
        <img src="/static/logo.png" alt="SAOA Logo" class="h-10 w-10" />
        <span class="text-lg font-semibold text-gray-600 font-[Libre_Baskerville]">
          South Asia Open Archives
        </span>
      </a>
    </div>

    <!-- Mobile Hamburger -->
    <div class="md:hidden">
      <button @click="open = !open" class="text-gray-600 focus:outline-none" aria-label="Toggle navigation">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Nav Links -->
    <nav :class="{ 'block': open, 'hidden': !open }"
      class="space-y-2 md:space-y-0 md:space-x-6 md:flex md:items-center md:static absolute top-full left-0 w-full md:w-auto bg-white md:bg-transparent z-40 p-4 md:p-0 hidden">

      <a href="/acknowledgements/" class="block text-gray-700 hover:text-black">Acknowledgments</a>
      <a href="/members/" class="block text-gray-700 hover:text-black">Members</a>
      <a href="/executive-board/" class="block text-gray-700 hover:text-black">Executive Board</a>

      <!-- Working Groups Dropdown -->
      <div class="relative" x-data="{ show: false }">
        <button @click="show = !show" class="flex items-center text-gray-700 hover:text-black focus:outline-none">
          Working Groups
          <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.08 1.04l-4.25 4.25a.75.75 0 01-1.08 0L5.21 8.27a.75.75 0 01.02-1.06z"
              clip-rule="evenodd" />
          </svg>
        </button>
        <div x-show="show" @click.away="show = false" x-transition
          class="mt-2 bg-white border border-gray-200 rounded shadow-md absolute md:left-0 w-64 z-50">
          <a href="/content-curation-working-group/"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Content Curation</a>
          <a href="/funding-working-group/" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Funding</a>
          <a href="/infrastructure-working-group/"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Infrastructure</a>
          <a href="/outreach-working-group/" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Outreach</a>
        </div>
      </div>

      <!-- Proposals Dropdown -->
      <div class="relative" x-data="{ show: false }">
        <button @click="show = !show" class="flex items-center text-gray-700 hover:text-black focus:outline-none">
          Proposals
          <svg class="ml-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.08 1.04l-4.25 4.25a.75.75 0 01-1.08 0L5.21 8.27a.75.75 0 01.02-1.06z"
              clip-rule="evenodd" />
          </svg>
        </button>
        <div x-show="show" @click.away="show = false" x-transition
          class="mt-2 bg-white border border-gray-200 rounded shadow-md absolute md:left-0 w-64 z-50">
          <a href="/digitization-guidelines/"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Digitization Guidelines</a>
          <a href="/digital-file-management/"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Digital File Management</a>
          <a href="/selection-guidelines/"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Selection Guidelines</a>
          <a href="/selection-principals/"
            class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Selection Principles</a>
        </div>
      </div>

      <!-- JSTOR Button -->
      <a href="https://www.jstor.org/site/south-asia-open-archives/" target="_blank"
        class="block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 text-center md:inline-block">
        Explore Collection on JSTOR
      </a>
    </nav>
  </div>
</header>