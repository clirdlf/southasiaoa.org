{
  "name": "southasiaoa.org",
  "version": "0.0.1",
  "description": "South Asia Open Archives",
  "scripts": {
    "start": "run-p start:*",
    "start:eleventy": "eleventy --serve",
    "start:postcss": "postcss src/styles/*.css --dir _site --watch",
    "build": "run-s clean build:eleventy build:postcss",
    "build:eleventy": "cross-env ELEVENTY_PRODUCTION=true eleventy",
    "build:postcss": "cross-env NODE_ENV=production postcss src/styles/*.css --dir _site",
    "clean": "rimraf _site",
    "debug": "cross-env DEBUG=Eleventy* npx @11ty/eleventy",
    "test": "jest --no-cache",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:html": "html-validate \"src/**/*.{html,njk}\"",
    "lint": "pnpm lint:js && pnpm lint:css",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clirdlf/saoa.git"
  },
  "keywords": [
    "eleventy",
    "11ty",
    "tailwind"
  ],
  "author": "DLF",
  "license": "Unlicense",
  "homepage": "https://github.com/clirdlf/saoa/#readme",
  "bugs": {
    "url": "https://github.com/clirdlf/saoa/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@tailwindcss/postcss": "^4.1.12",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.1",
    "eslint": "^9.34.0",
    "glob": "^11.0.3",
    "html-minifier-terser": "^7.2.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "rimraf": "^6.0.1",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^4.1.12"
  },
  "dependencies": {
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11tyrocks/eleventy-plugin-emoji-readtime": "^1.0.1",
    "@material-tailwind/html": "^2.3.2",
    "@tailwindcss/typography": "^0.5.16",
    "clean-css": "^5.3.3",
    "eleventy-plugin-hubspot": "^1.3.5",
    "flowbite": "^3.1.2",
    "git-branch": "^2.0.1",
    "luxon": "^3.7.1",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "jest": {
    "testEnvironment": "jsdom"
  }
}
